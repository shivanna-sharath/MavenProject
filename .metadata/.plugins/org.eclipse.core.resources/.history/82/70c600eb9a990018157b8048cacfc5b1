class a extends Thread{
	
}
class b extends Thread{
	
}
class c{
	int number;
	int result;
	int flag;
	public c() {
		number=0;
		result=1;
		flag=0;
	}
	synchronized public void met1() throws InterruptedException {
		if( flag==0) {
			wait();
		}
		number++;
		flag=0;
		notify();
	}
	synchronized public void met2() throws InterruptedException {
		if(flag==1) {
			wait();
		}
		result = 1; 
		for(int i=number;i>0;i--) {
			             
			
				result = result * (i);
			}
			System.out.println(number + "  " + result);
			flag = 1;
			notify();
		}
		
	}
}


