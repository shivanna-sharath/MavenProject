class first1 extends Thread {
	third a;

	public first1(third t) {
		a = t;
	}

	public void run() {
		for (int i = 0; i < 10; i++) {
			try {
				a.met1();
			} catch (InterruptedException e) {

				e.printStackTrace();
			}
		}

	}
}

class second2 extends Thread {
	third a;

	public second2(third t) {
		a = t;
	}

	public void run() {
		while (true) {
			try {
				a.met2();
			} catch (InterruptedException e) {

				e.printStackTrace();
			}
		}

	}

}

class third {
	int number;
	int result;
	int flag;

	public third() {
		number = 0;
		result = 1;
		flag = 0;
	}

	synchronized public void met1() throws InterruptedException {
		
		number++;
		flag = 0;
		
	}

	synchronized public void met2() throws InterruptedException {
		
		result = 1;
		for (int i = number; i > 0; i--) {
			result = result * (i);
		}
		System.out.println(number + "  " + result);
		flag = 1;
		
	}

}

public class Exc {

	public static void main(String[] args) throws InterruptedException {
		third c = new third();
		Thread t1 = new Thread();
		first1 a = new first1(c);
		second2 b = new second2(c);

		a.start();
		Thread.sleep(2000);
		b.start();

	}

}
